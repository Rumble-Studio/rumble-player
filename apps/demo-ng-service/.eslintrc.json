{
	"extends": ["../../.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": [
				"plugin:@nrwl/nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates"
			],
			"parserOptions": {
				"project": ["apps/demo-ng-service/tsconfig.*?.json"]
			},
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{ "type": "attribute", "prefix": "rumble-player", "style": "camelCase" }
				],
				"@angular-eslint/component-selector": [
					"error",
					{ "type": "element", "prefix": "rumble-player", "style": "kebab-case" }
				]
			}
		},
		{
			"files": ["*.html"],
			"extends": ["plugin:@nrwl/nx/angular-template"],
			"rules": {}
		}
	]
}
